<%- include('components/head.ejs'); %>
<%- include('components/navbar.ejs'); %>

<section class="container">
    <div class="row justify-content-around g-0">
        <div class="content-md">
            
            <form action="/account" method="post" onsubmit="return validateForm(event)">

                <div>
                    <h3>Account Details</h3>

                    <div class="row g-0 mt-4">
                        <label class="col-sm-2 col-form-label-sm">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control-plaintext form-control-sm" value="<%= user.email%>" readonly>          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="first_name" value="<%= user.first_name%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="last_name" value="<%= user.last_name%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Phone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="phone" value="<%= user.phone%>">          
                        </div>
                    </div>
                </div>


                <hr class="my-4">


                <div>

                    <h5>Mailing Information</h5>

                    <div class="row g-0 mt-4">
                        <label class="col-sm-2 col-form-label-sm">Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="mailing_address" value="<%= user.mailing_address%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">City</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="mailing_city" value="<%= user.mailing_city%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Province/State</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="mailing_state" value="<%= user.mailing_state%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Country</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="mailing_country" value="<%= user.mailing_country%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Postal Code</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="mailing_postal_code" value="<%= user.mailing_postal_code%>">          
                        </div>
                    </div>
                    
                </div>


                <hr class="my-4">


                <div>

                    <h5>Billing Address</h5>

                    <div class="row g-0 mt-4">
                        <label class="col-sm-2 col-form-label-sm">Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="billing_address" value="<%= user.billing_address%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">City</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="billing_city" value="<%= user.billing_city%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Province/State</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="billing_state" value="<%= user.billing_state%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Country</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="billing_country" value="<%= user.billing_country%>">          
                        </div>
                    </div>
    
                    <div class="row g-0 mt-3">
                        <label class="col-sm-2 col-form-label-sm">Postal Code</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm" name="billing_postal_code" value="<%= user.billing_postal_code%>">          
                        </div>
                    </div>
                    
                </div>


                <div class="d-flex justify-content-between align-items-end mt-4">

                    <a href="/logout" class="btn btn-danger btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Sign out
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>
                        Save
                    </button>
                </div>
                
            </form>

        </div>
    </div>
</section>



<script type="text/javascript">


const users = JSON.parse('<%- JSON.stringify(user) %>');

function validateForm(e) {

    return true;
}


</script>


