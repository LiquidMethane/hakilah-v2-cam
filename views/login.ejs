<%- include('components/navbar.ejs'); %>

<section class="container">

    <form action="/login" method="post">

        <div class="d-flex justify-content-around pt-5">

            <div class="auth-card">

                <h3>Sign in</h1>

                <div class="mt-4">
                    <label class="form-label">Email:</label><br>
                    <input type="text" class="form-control" name="email" required>          
                </div>
    
                <div class="mt-3 mb-3">
                    <label class="form-label">Password:</label><br>
                    <input type="password" class="form-control" name="password" required>
                </div>

                <% if (typeof(success) !== 'undefined' && success == false) { %>
                    <div class="alert alert-danger mt-1 py-2">
                        Invalid email/password.
                    </div>
                <% } %>


                <button class="btn btn-primary shadow-sm mt-2 mb-4 w-100" formaction="/login" type="submit">Login</button>
            
                <div class="text-divider text-gray">
                    New to Hakilah?
                </div>

                <a href="/register" class="btn btn-outline-dark shadow-sm mt-3 w-100">Create an account</a>
            </div>
        </div>
    </form>

</section>



